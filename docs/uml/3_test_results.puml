@startuml

skinparam nodesep 75
skinparam ranksep 50
hide empty members



package uutf {

  class Assertions {
    + {static} assertTrue(bool)
    + {static} assertFalse(bool)
    + {static} assertEquals(int, int)
  }

  abstract class TestCase {
    + run(): TestResult
    __
    # {abstract} test()
  }

  class TestRunner {
    + addCase(TestCase)
    + run()
  }

  TestRunner *-> "0..n\ncases" TestCase
  TestCase .. TestResult
  TestRunner .. TestResult

enum STATUS {
  PASSED
  FAILED
  ERRORED
}

class TestResult {
  - String name
  + STATUS
  __
  + this(String)
  __
  + setStatus(STATUS)
  + getStatus(): STATUS
}

TestResult . STATUS

}

note "Command pattern" as N1
N1 .. TestRunner
N1 .. TestCase

package java.lang {
  class AssertionError
}

AssertionError .. Assertions




@enduml
